// manifest.json
{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "description": "Description of your extension",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
